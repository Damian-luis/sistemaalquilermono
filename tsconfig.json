{
  "compilerOptions": {
    "outDir": "./dist",   // Especifica la carpeta de salida
    "rootDir": "./",      // Define el directorio raíz de los archivos fuente
    "module": "commonjs", 
    "target": "es2016", 
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],  // Incluir todos los archivos TypeScript
  "exclude": ["node_modules", "dist"]  // Excluir la carpeta dist para evitar ciclos de compilación
}
